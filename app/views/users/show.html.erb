<div class="container">
<h2>フォロー一覧</h2>
<% @followeds.each do |followed| %>
  <div class="row">
    <div class="profile-img">
      <%= profile_img(followed) %>
    </div>
  </div>
  <div class="row">
    <%= followed.name %>
  </div>
  <div class="row">
    <%= followed.email %>
  </div>
<% end %>

<br/>

